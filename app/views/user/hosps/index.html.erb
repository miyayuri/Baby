<div class='body'>
    <div class='container'>
        <section class="row">
        <h2 class="title text-center">おすすめ病院一覧</h2>
            <div class="col-xs-2">
            <%= render 'layouts/infsidebar' %>
            </div>
            <div class='col-xs-10'>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>名前</th>
                            <th>都道府県</th>
                            <th>内容</th>
                            <th>オススメ数</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @hosp.each do |hosp| %>
                        <tr>
                            <td><%= hosp.name %></td>
                            <td><%= hosp.prefecture.name %></td>
                            <td><%= hosp.body %></td>
                            <td><%= hosp.hosp_likes.count %> オススメ
                            <td><%= link_to "詳細を見る", user_hosp_path(hosp.id), class:"btn btn-success" %>
                        </tr>
                    <% end %>
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</div>
