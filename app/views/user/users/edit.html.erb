<div class="body">
  <div class="container">
    <section class="row row-eq-height">

        <div class="col-xs-2">
            <div class="sidebar">
                <%= render 'layouts/common' %>
            </div>   
        </div>

        <div class="col-xs-10">

            <div class="style-1 rounded has-shadow-1">
                <h2 class="">ユーザー情報 編集</h2>

                <%= form_for @user, url: user_user_path(@user) do |f| %>
                  <div class="form-group has-icon">
                    <label class="control-label" for="inputnickname">ニックネーム</label>
                    <%= f.text_field :nickname, autofocus: true, class:"form-control", id:"inputnickname", placeholder:"ニックネーム"%>
                  </div>

                  <div class="form-group has-icon">
                    <label class="control-label" for="name">名前</label>
                    <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputname", placeholder:"名前"%>
                  </div>

                  <div class="form-group has-icon">
                    <label class="control-label" for="inputftel">電話番号</label>
                    <%= f.text_field :tel, autofocus: true, class:"form-control", id:"inputtel", placeholder:"電話番号"%>
                  </div>

                  <div class="form-group has-icon">
                    <label class="control-label" for="inputfemail">メールアドレス</label>
                    <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputemail", placeholder:"メールアドレス"%>
                  </div>

                  <div class="form-group has-icon">
                  <%= f.submit "登録内容を変更する", class:"btn btn-primary" %></div>
                  <div class="form-group has-icon">
                  <%= link_to "アカウント削除する", user_user_path(@user.id), class:"alert-link btn btn-danger", method: :delete, "data-confirm" => "削除をすると、今までの投稿も全て削除されます。本当に削除しますか" %></div>
                <% end %>
            </div>
        </div>
    </section>
  </div>
</div>



