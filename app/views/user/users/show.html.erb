<div class='body'>
<div class="container">
    <section class="row">
        <h1 class="col-xs-11 col-xs-offset-1">ユーザー情報</h1>
        <div class="col-xs-10 col-xs-offset-1">
            <div class="col-xs-9">
            <table class="table">
                <thead>
                    <tr>
                        <th class="col text-center">登録内容</th>
                        <th class="col text-center"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="col-xs-3">ニックネーム</td>
                        <td class="col-xs-9 h4"><%= @user.nickname %></td>
                    </tr>
                    <tr>
                        <td class="col-xs-3">名前</td>
                        <td class="col-xs-9 h4"><%= @user.name %></td>
                    </tr>
                    <tr>
                        <td class="col-xs-3 ">電話番号</td>
                            <td class="col-xs-9 h4"><%= @user.tel %></td>
                    </tr>
                    <tr>
                        <td class="col-xs-3 ">メールアドレス</td>
                        <td class="col-xs-9 h4"><%= @user.email %></td>
                    </tr>
                </tbody>
            </table>
            <%= link_to "編集", edit_user_user_path(@user.id), class:"btn btn-success form-control" %>
            </div>
        </div>
    </section>
</div>
</div>
