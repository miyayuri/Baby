<body>
<section class="slice slice-lg sct-color-1">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                <div class="style-1 rounded has-shadow-1">
                    <h2 class="">おすすめ投稿　編集</h2>

                        <%= form_for @recommend, url:user_recommend_path(@recommend) do |recommend| %>
                        <%= recommend.hidden_field :term %>
                        
                          <div class="form-group has-icon">
                            <h4 class="col-xs-12">ジャンル</h4>
                            <div class="col-xs-10 col-xs-offset-1">
                                <label><%= recommend.radio_button :genre, "アクティブ" %> アクティブ　</label>
                                <label><%= recommend.radio_button :genre, "リラックス" %> リラックス </label>
                            </div>
                        　</div>     

                          <div class="form-group has-icon">
                            <label class="control-label" for="inputftel">タイトル</label>
                            <%= recommend.text_field :title, autofocus: true, class:"form-control", id:"inputtitle", placeholder:"タイトル"%>
                          </div>

                          <div class="form-group has-icon">
                            <label class="control-label" for="inputfemail">内容</label>
                            <%= recommend.text_area :body, autofocus: true, class:"form-control", id:"inputemail", placeholder:""%>
                          </div>

                          <div class="form-group has-icon">
                          <%= recommend.submit "登録内容を変更する", class:"form-control btn btn-primary" %></div>
                          <div class="form-group has-icon">
                          <%= link_to "削除する", user_recommend_path(@recommend.id), class:"form-control btn btn-danger", method: :delete %></div>
                        <% end %>
                </div>
            </div>
        </div>,
    </div>
</section>
</body>
