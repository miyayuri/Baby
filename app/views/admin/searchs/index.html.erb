<div class='body'>
    <div class="container">
        <section class="row">
            <h1 class="col-xs-8 col-xs-offset-4">全投稿一覧</h1>

                <div class="col-xs-12 ">    

                    <div class="kensaku">
                        <%= form_tag admin_searchs_path, method: :get do %>
                        <%= text_field_tag :q, nil %>
                        <%= submit_tag "検索" %>
                        <% end %>
                    </div>


                    <table class="table">
                    <thead>
                        <tr>
                            <th>内容</th>
                            <th>投稿者ID</th>
                            <%# <th>投稿者名</th> %>
                        </tr>
                    </thead>
                    <% @result&.each do |result| %>
                    <tbody>
                        <tr>
                        <td><%= result.body %></td>
                        <td><%= link_to admin_user_path(result.user_id) do %><%= result.user.id %></td><% end %>
                        <%# <td><%= link_to admin_user_path(result.user_id) do %>
                        <%# <%= result.user.name%>
                        <%# <% end  %>  
                        </tr>
                    </tbody>
                    <% end %>
                    </table>

                </div>
        </section>
    </div>
</div>
