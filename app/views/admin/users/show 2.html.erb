<div class='body'>
<div class="container">
    <section class="row">

        <div class="col-xs-2">
        </div>
        <div class="col-xs-10">
        <h1 class="col-xs-11 col-xs-offset-1">ユーザー情報</h1>
            <%= link_to "このユーザを削除", admin_user_path(@user.id), class:"alert-link btn btn-danger", method: :delete, "data-confirm" => "本当に退会させますか？" %>
            <table class="table">
                <thead>
                    <tr>
                        <th class="col text-center">登録内容</th>
                        <th class="col text-center"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="col-xs-3">ニックネーム</td>
                        <td class="col-xs-9 h4"><%= @user.nickname %></td>
                    </tr>
                    <tr>
                        <td class="col-xs-3">名前</td>
                        <td class="col-xs-9 h4"><%= @user.name %></td>
                    </tr>
                    <tr>
                        <td class="col-xs-3 ">電話番号</td>
                            <td class="col-xs-9 h4"><%= @user.tel %></td>
                    </tr>
                    <tr>
                        <td class="col-xs-3 ">メールアドレス</td>
                        <td class="col-xs-9 h4"><%= @user.email %></td>
                    </tr>
                </tbody>
            </table>
            <div class="col-xs-10 col-xs-offset-1 user-show-block">
                <h2>レビュー一覧</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                        <th>レビュー内容</th>
                    </tr>
                </thead>
                <tbody>
                    <% @user.hosp_reviews.each do |review| %>
                    <tr>
                        <td></td>
                        <td>
                        <%= link_to admin_hosp_path(review.hosp_id) do %>
                        <%= review.hosp_id %>
                        <% end %></td>
                        <td><%= review.body %></td>
                        <td>
                        <%= link_to "削除", admin_hosp_review_path(review.id), class:"alert-link btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
                    </tr>
                    <% end %>
                </tbody>
            </div>         
        </div>

    </section>
</div>
</div>
