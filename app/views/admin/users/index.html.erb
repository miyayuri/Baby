<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>ユーザー一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>    
            <th>ユーザーID</th>
            <th>ユーザー名</th>
            <th>電話番号</th>
            <th>メールアドレス</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @users.each do |user| %>
              <td>
                <%= link_to admin_user_path(user.id) do %>
                <%= user.id %>
                <% end %>
              </td>
              <td>
              <%= user.nickname %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= user.tel %>
              </td>
              <td>
                <%= user.email %>
              </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
