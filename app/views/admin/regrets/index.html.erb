div class='body'>
<div class="container">
    <section class="row">
     <h2 class="title text-center">Regret投稿一覧</h2>
        <div class='col-xs-12'>
            <div class="">
            <% @regrets.each do |regret|  %>
                <%= regret.body %>
                <%= regret.period.name %>
                <% if user_signed_in? && current_user.id == regret.user_id %>
                    <%= link_to "削除", user_regret_path(regret.id), method: :delete %>
                <%end %>
            <% end %>
            </div>
        </div>
    </section>
</div>
</div>