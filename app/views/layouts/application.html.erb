<!DOCTYPE html>
<html>
  <head>
    <title>********</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Manjari&display=swap" rel="stylesheet">
  </head>
  <body>
    <header class="header">
        <div class="taitoru">
          <span class="taitoru">Baby</span></div>

        <div class="menu">
        <% if admin_signed_in? %>
          <div class="breadcrumb">
            <li><%= link_to "ユーザ一覧", admin_users_path, class:"hm-link text-center h5" %></li>
            <li><%= link_to "病院レビュー一覧", admin_hosp_reviews_path, class:"hm-link text-center h5" %></li> 
            <li><%= link_to "おすすめ投稿一覧", admin_human_summary_path, class:"hm-link text-center h5" %></li>
            <li><%= link_to "ログアウト", destroy_admin_session_path, class:"hm-link text-center h5", method: :delete %></li>
        </div>

        <% else %>
         <% if user_signed_in? %>
          <div class="breadcrumb">
            <!--ログインしてる -->
              <li><%= link_to 'TOP', root_path, class:"text-center h5" %></li>
              <li><%= link_to "MY PAGE",user_user_path(current_user.id) %></li>
          </div>
         <% else %>
         <div class="breadcrumb">
            <!--  ログインしてない -->
              <li><%= link_to 'TOP', root_path, class:"hm-link text-center h5" %>
              <li><%= link_to_unless_current "LOGIN", new_user_session_path, class:"hm-link text-center h5" %></li>
              <li><%= link_to_unless_current "SIGN UP", new_user_registration_path, class:"hm-link text-center h5" %></li>
         <% end %>
        <% end %>
        </div>
      </div>
      </header>
    <%= yield %>
  </body>
</html>
